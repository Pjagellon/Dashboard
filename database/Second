<?php
// database/db_connect.php
$host = "localhost";
$user = "db_user";
$pass = "db_pass";
$dbname = "signwizard_chatbot";
$port = 3306;

$conn = new mysqli($host, $user, $pass, $dbname, $port);
if ($conn->connect_error) {
    http_response_code(500);
    die(json_encode(["error" => "DB connection failed"]));
}
$conn->set_charset('utf8mb4');
